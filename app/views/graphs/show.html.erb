<!-- Pass json to Javascript -->
<%= content_tag :div, class: "graph_json", data: {json: @graph.graph_json} do %>
<% end %>

<div class="container">

  <h1>
    Created <%= @graph.name %>
  </h1>

  <div class="jumbotron">
    <div id="display_graph">
      <!-- Placeholder for force directed graph -->
    </div>
  </div>
</div>

<!-- Buttons to control graph behavior -->
<div class="container">
  <div id="behaviors" class="graph_control_panel">
    <div id="label_num_input">
      <label>
        <span class="label label-primary">Link Distance</span>
      </label>
      <input type="number" id="link_distance" value="100" size=4>
    </div>
    <div id="label_num_input">
      <label>
        <span class="label label-primary">Charge</span>
      </label>
      <input type="number" id="charge" value="-120" size=4>
    </div>
    <div id="label_num_input">
      <label>
        <span class="label label-primary">Node Radius</span>
      </label>
      <input type="number" id="radius" value="10" size=4>
    </div>
    <div id="label_num_input">
      <label>
        <span class="label label-primary">Font Size</span>
      </label>
      <input type="number" id="font_size" value="12" size=4>
    </div>
    <div id="fisheye">
      <button type="button" class="btn btn-primary btn-lg">
        <span class="glyphicon glyphicon-eye-open"> Fisheye</span>
      </button>
    </div>
    <div id="refresh">
      <button id="refresh_btn" type="button" class="btn btn-primary btn-lg">
        Make Graph
      </button>
    </div>
  </div>

  <div id="relationships" class="graph_control_panel">
    <h3>Display Relationships</h3>
    <button type="button" class="btn btn-primary btn-block">Nodes</button>
    <button type="button" class="btn btn-primary btn-block">Links</button>
  </div>
</div>
