
<div class ="container">

  <div class="row">
    <div class="col-md-12">
      <h3>Create A New User</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= form_for @user do |u| %>
          <%= u.text_field :name, placeholder: 'Login', class: "form-control" %>
          </br>
          <%= u.password_field :password, placeholder: 'Password', class: "form-control" %>
          <%= u.password_field :password_confirmation, placeholder: 'Confirm Password', 
            class: "form-control"%>

          <%= u.submit "Sign in", class: "btn btn-md btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>

</div>